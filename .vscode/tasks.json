{
  "version": "2.0.0",
  "tasks": [
    { "label": "db:up", "type": "shell", "command": "docker compose up -d", "options": { "cwd": "${workspaceFolder}" } },
    { "label": "db:down", "type": "shell", "command": "docker compose down", "options": { "cwd": "${workspaceFolder}" } },
    { "label": "backend:install", "type": "shell", "command": "npm install", "options": { "cwd": "${workspaceFolder}/backend" } },
    { "label": "frontend:install", "type": "shell", "command": "npm install", "options": { "cwd": "${workspaceFolder}/frontend" } },
    { "label": "mobile:install", "type": "shell", "command": "npm install", "options": { "cwd": "${workspaceFolder}/mobile" } },
    { "label": "backend:dev", "type": "shell", "command": "npm run start:dev", "options": { "cwd": "${workspaceFolder}/backend" } },
    { "label": "frontend:dev", "type": "shell", "command": "npm run dev", "options": { "cwd": "${workspaceFolder}/frontend" } },
    { "label": "mobile:dev", "type": "shell", "command": "npm start", "options": { "cwd": "${workspaceFolder}/mobile" } }
  ]
}
